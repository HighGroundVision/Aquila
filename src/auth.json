{
  "platform": {
    "enabled": "true"
  },
  "globalValidation": {
    "unauthenticatedClientAction": "Return401",
    "redirectToProvider": "hgv"
  },
  "identityProviders": {
    "azureActiveDirectory": {
      "enabled": "<true|false>",
      "registration": {
        "openIdIssuer": "<issuer url>",
        "clientId": "<app id>",
        "clientSecretSettingName": "APP_SETTING_CONTAINING_AAD_SECRET"
      },
      "login": {
        "loginParameters": [
          "paramName1=value1",
          "paramName2=value2"
        ]
      },
      "validation": {
        "allowedAudiences": [
          "audience1",
          "audience2"
        ]
      }
    },
    "openIdConnectProviders": {
      "hgv": {
        "enabled": "true",
        "registration": {
          "clientId": "hgv",
          "clientCredential": {
            "clientSecretSettingName": "ClientSecret"
          },
          "openIdConnectConfiguration": {
            "wellKnownOpenIdConfiguration": "https://ballista.canadacentral.azurecontainer.io/.well-known/openid-configuration"
          }
        },
        "login": {
          "scopes": [
            "openid",
            "profile"
          ]
        }
      }
    }
  }
}